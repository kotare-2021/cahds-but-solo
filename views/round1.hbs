<div>
    <div class="container">
        <div class="answer1">
            <p> {{answer}}answer1</p>
        </div>
        <div class="question">
            <p>{{question.question}}question</p>
        </div>
        <div class="answer2">
            <p>{{answer}}answer2</p>
        </div>
    </div>

<div class="container">
    <div class="card">
        <div class="played">
            <p>{{answer}}</p>
        </div>
    </div>
</div> 

<form action='/' method='POST'>
  <div class="container" >
    {{#each hand}}
    <button type='submit' method='POST' action='/play/{{id}}'>
      <div class={{#if chosen}}'chosen'{{/if}}>
        <div class="answer">
          <p>{{answer}}</p>
        </div>
      </div>
    </button>
    {{/each}}
  </div>
</form> 

